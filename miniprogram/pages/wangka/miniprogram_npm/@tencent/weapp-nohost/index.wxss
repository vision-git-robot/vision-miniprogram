/* components/nohost/index.wxss */
.nohost {
  position: fixed;
  width: 40px;
  height: 40px;
  z-index: 9999;
}

.nohost-btn {
  /* btn-reset */
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  border-radius: 0;
  overflow: auto;
  /* btn-reset */

  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
  border: 4px solid rgba(84, 189, 221, 0.3);
  background: rgba(91, 192, 222, 0.3);
  position: relative;
  z-index: 9999;
}

.nohost-tips {
  display: none;
  position: fixed;
  left: 50%;
  top: 15px;
  transform: translate3d(-50%, 0, 0);
  z-index: 9999;
  min-width: 300px;
  max-width: 90%;
  background: #13ce66;
  color: #fff;
  text-align: center;
  line-height: 20px;
  padding: 10px;
  transition: 0.3s;
  font-size: 16px;
  border-radius: 3px;
}

.nohost-mask {
  position: fixed;
  z-index: 9998;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.nohost-list {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 9999;
  width: 300px;
}
.nohost-list.z-show {
  display: block;
}
.nohost-list.z-step2 .nohost-tt-arrow {
  display: block;
}
.nohost-list-tt {
  /* btn-reset */
  margin: 0;
  border: none;
  border-radius: 0;
  /* btn-reset */

  display: block;
  box-sizing: border-box;
  width: 100%;
  color: #fff;
  font-size: 16px;
  line-height: 38px;
  padding: 5px 20px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  background: #6cafe7;
  position: relative;
}
.nohost-tt-arrow {
  display: none;
  content: ' ';
  position: absolute;
  top: 18px;
  left: 24px;
  width: 12px;
  height: 12px;
  border: 2px solid #fff;
  transform: rotate(45deg);
  border-top: none;
  border-right: none;
}
.nohost-list-wrap {
  display: block;
  max-height: 70vh;
  overflow: auto;
}
.nohost-list-item {
  /* btn-reset */
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  border-radius: 0;
  overflow: auto;
  /* btn-reset */

  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  font-size: 16px;
  line-height: 20px;
  height: 41px;
  color: #000;
  padding: 10px 16px;
  background: #fff;
  text-align: left;
  position: relative;
}
.nohost-list-item.z-sel {
  background: #bdbdbd;
}
.nohost-arrow {
  content: '';
  position: absolute;
  top: 14px;
  right: 24px;
  width: 12px;
  height: 12px;
  border: 1px solid #aaaaaa;
  transform: rotate(45deg);
  border-left: none;
  border-bottom: none;
  display: none;
}
.nohost-list-item.z-show-arrow .nohost-arrow {
  display: block;
}
.nohost-list-item.z-sel .nohost-arrow {
  border-color: #000;
}
